

<div class="banner text-center" style="background-image: url('<%=@course.image%>')">
  <div class="banner-gradient"></div>
  <div class="banner-content">
    <h1><%= @course.name %></h1>
    <p>Ici une petite description du cours (manque cette colone en DB)</p>
    <a class="btn btn-primary btn-lg">Je commence maintenant</a>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <div class="thumbnail">
      <div id="wistia_<%= @course.video_teaser %>"></div>
      <div class="caption">
        <h3>TEASER VIDEO DU COURS</h3>
        <p>...</p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>
</div>


<!-- Review -->

<div class="container">
  <div class="row">
    <div class = "col-md-3">
      <h2><%= pluralize @course.reviews.size, "review" %></h2>
      <div id="reviews">
        <% if @course.reviews.blank? %>
        Be the first to leave a review for <%= @course.name %>
        <% else %>
        <% @course.reviews.each do |review| %>
        <%= render 'reviews/show', review: review %>
        <% end %>
        <% end %>
        <!-- TODO display only if user connected AND user payed that course -->
        <%= render 'reviews/new', course: @course, review: @review if current_user %>
      </div>
    </div>
  </div>
</div>
<!-- Review -->



