<h1><%= @course.name %></h1>
  <p><%= image_tag @course.image(:medium) %></p>
  <p><%= @course.content %></p>
  <ul>
    <% @lessons.each do |lesson| %>
    <li>
        <%= link_to [lesson.course, lesson] do %>
        <%= lesson.note %>
    </li>
      <% end %>
  </ul>
<% end %>

  <div class="card-content">
    <h4>Reviews</h4>
    <div><%= render 'reviews/form' if @joined && !@hasReview %></div>
    <div><%= render 'reviews/index' %></div>
  </div>
