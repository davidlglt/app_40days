<div class="container">
  <div class="row">
    <div class = "col-xs-12 sm-4">
      <p>Comment: <%= review.comment %></p>
      <p>Stars:   <%= review.star %></p>

      <% if policy(review).destroy? %>
        <%= link_to "Destroy", course_review_path(@course, review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn-btn primary" %>
      <% end %>
    </div>
  </div>
</div>
