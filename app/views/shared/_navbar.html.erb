<nav class="navbar-wagon">
  <div class="container navbar-wagon-container">

    <a>
      <%= link_to (image_tag("logo.png", :alt => "home image", :width => 50, :height => 50)), root_path %>
    </a>

    <div class="navbar-wagon-pusher"></div>

    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <span class="dropdown-toggle", data-toggle="dropdown">Mon compte</span>
          <b class="caret dropdown-toggle", data-toggle="dropdown"></b>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to "/" do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to "Sign in with Facebook", omniauth_authorize_path('user', 'facebook'), class: "navbar-wagon-item navbar-wagon-link" %>
    <hr>
    <%= link_to t(".top_call_to_action", default: "Sign in"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>
  </div>
</nav>
