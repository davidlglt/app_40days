<!-- DEBUT COURSES -->
        <div class="col-md-8">
          <p><%= image_tag @course.image(:medium) %></p>
          <p><%= @course.name %></p>
          <hr>
          <h2><%= @course.content %></h2>
            <div class="lessons">
                <% @lessons.each do |lesson| %>
                  <% if lesson.header %>
                  <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" class="active"><a href="#"><%= lesson.title %></a></li>
                  </ul>
                  <% else %>
                  <ul class="nav nav-pills nav-stacked">
                    <li role="presentation"><%= link_to [lesson.course, lesson] do %><%= lesson.note %></li>
                  </ul>
                  <% end %>
               <% end %>
               <% end %>
            </div>
        </div>
      </div>
    </div>

<!-- Review -->

<div class="container">
    <div class="row">
      <div class = "col-md-3">
          <h2><%= pluralize @course.reviews.size, "review" %></h2>
        <div id="reviews">
          <% if @course.reviews.blank? %>
            Be the first to leave a review for <%= @course.name %>
          <% else %>
            <% @course.reviews.each do |review| %>
              <%= render 'reviews/show', review: review %>
            <% end %>
          <% end %>
          <!-- TODO display only if user connected AND user payed that course -->
          <%= render 'reviews/new', course: @course, review: @review if current_user %>
        </div>
    </div>
  </div>
</div>
