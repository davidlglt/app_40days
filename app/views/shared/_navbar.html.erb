<nav class="navbar-wagon">
  <div class="container navbar-wagon-container">

    <a>
      <%= link_to root_path do %>
        <%= render 'shared/logo' %>
      <% end %>
    </a>

    <div class="navbar-wagon-pusher"></div>

    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <span class="dropdown-toggle", data-toggle="dropdown">Mon compte</span>
          <b class="caret dropdown-toggle", data-toggle="dropdown"></b>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to "/" do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Acceuil" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Quitter" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to omniauth_authorize_path('user', 'facebook'), class: "login-fb" do %>
        Sign in with <i class="fa fa-facebook"></i>
      <% end %>
    <% end %>
  </div>
</nav>

